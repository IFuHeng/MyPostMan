<?xml version="1.0" encoding="utf-8"?>

<level-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <padding
                android:bottom="1dp"
                android:left="10dp"
                android:right="2dp"
                android:top="5dp" />
            <solid android:color="#BDBDBD" />
            <stroke
                android:width="1px"
                android:color="#A3A2A2" />
            <corners
                android:topLeftRadius="10dp"
                android:topRightRadius="20dp" />
        </shape>
    </item>
    <item android:maxLevel="2">
        <shape android:shape="rectangle">
            <padding
                android:bottom="1dp"
                android:left="10dp"
                android:right="2dp"
                android:top="5dp" />
            <solid android:color="#329fc9" />
            <stroke
                android:width="1px"
                android:color="#70c9f9" />
            <corners
                android:topLeftRadius="10dp"
                android:topRightRadius="20dp" />
        </shape>
    </item>
</level-list>