<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <padding android:bottom="1dp" android:left="10dp" android:right="10dp" android:top="5dp" />
            <solid android:color="#329fc9" />
            <stroke android:width="1px" android:color="#70c9f9" />
            <corners android:topLeftRadius="10dp" android:topRightRadius="20dp" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <padding android:bottom="1dp" android:left="10dp" android:right="10dp" android:top="5dp" />
            <solid android:color="#BDBDBD" />
            <stroke android:width="1px" android:color="#A3A2A2" />
            <corners android:topLeftRadius="10dp" android:topRightRadius="20dp" />
        </shape>
    </item>
</selector>